<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile_app.Views.Dashboard">
        <NavigationPage.TitleView>
        <Label Text="Project Skills" FontSize="Medium"/>
        </NavigationPage.TitleView>
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="AddGadget" Text="Add Gadget" Clicked="AddGadget_Clicked"/>
        <ToolbarItem x:Name="ViewGadget" Text="View Gadget" Clicked="ViewGadget_Clicked"/>
        <ToolbarItem x:Name="Settings" Text="Settings" Clicked="Settings_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to the dashboard!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>